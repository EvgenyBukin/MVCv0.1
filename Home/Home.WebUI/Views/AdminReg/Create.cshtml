@model Home.WebUI.Models.CreateModel

@{
    ViewBag.Title = "Создание пользователя";
    Layout = "~/Views/Shared/_RegisterForm.cshtml";
}


@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Имя</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>

    bool resultA = User.IsInRole("Admin");

    if (resultA)
    {
     @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
    }
    else
    {
        @Html.ActionLink("Отмена", "List", "General", null, new { @class = "btn btn-default" })
    }
}

