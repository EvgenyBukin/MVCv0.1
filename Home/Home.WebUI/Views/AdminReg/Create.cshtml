@model Home.WebUI.Models.CreateModel

@{
    ViewBag.Title = "Создание пользователя";
    Layout = "~/Views/Shared/_RegisterForm.cshtml";
}
<div class="bg">
    <div class="mg1">
        <h2>Регистрация</h2>
        @Html.ValidationSummary(false)
        @using (Html.BeginForm())
        {
            <div class="form-group bg1">
                <label>Имя</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control v3" })
            </div>
            <div class="form-group bg1">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control v3" })
            </div>

            <div class="form-group bg1">
                <label>Пароль</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control v3" })
            </div>
            <button type="submit" class="btn btn-primary">Создать</button>

            bool resultA = User.IsInRole("Admin");

            if (resultA)
            {
                @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-primary btnStyle" })
            }
            else
            {
                @Html.ActionLink("Отмена", "List", "General", null, new { @class = "btn btn-primary btnStyle" })
            }
        }

        @section B{
        }

        @section C{
        }
    </div>
</div>