@model IEnumerable<Home.Domain.Entities.Article>

@{
    ViewBag.Title = "IndexA";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Дополнительный блок</h2>
        @Html.ActionLink("Основной блок", "Index", null, new
        {
            @class = "btn btn-defaultGeneral"
        })
        @Html.RouteLink("Главная страница", new { controller = "General",
            action= "List",
        }, new { @class = "btn btn-defaultGeneral" })
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr class="headerTableA">
                <th class="text-right">ID</th>
                <th>Название</th>
                <th class="text-right">Описание</th>
                <th class="text-right">Текст</th>
                <th class="text-right">Изображение_1</th>
                <th class="text-right">Видео</th>
                <th class="text-right">Дата</th>
                <th class="text-right">Автор</th>
                <th class="text-right">Изображение_3</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="contentTableA">
                    <td class="text-right">@item.ArticleId</td>
                    <td>@Html.ActionLink(item.Name, "EditA", new { item.ArticleId })</td>
                    <td class="text-right">@item.Description</td>
                    <td class="text-right">@item.ArticleTxt</td>
                    <td class="text-right">@item.Img1</td>
                    <td class="text-right">@item.Img2</td>
                    <td class="text-right">@item.Data</td>
                    <td class="text-right">@item.Author</td>
                    <td class="text-right">@item.Img3</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteA", "Admin"))
                        {
                            @Html.Hidden("ArticleId", item.ArticleId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить запись", "CreateA", null,
      new { @class = "btn btn-default" })
    </div>
</div>